
<%# si on veut ajouter une image en fond avec cloudinary : style="background-image:url(https://res.cloudinary.com/beyondsky/image/upload/v1629363709/k2hl3vqvbqlalyriaj96.jpg); %>

<div class="form-container">
  <div class="form-spaceship">
    <%= simple_form_for(@spaceship) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :capacity %>
        <%= f.input :price %>
        <%= f.input :standing %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
